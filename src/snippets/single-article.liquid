<div class="col-lg-4 col-md-6">
    <div class="single-blog mb-30">
        <div class="blog-img">
            <a href="#">
                {% if article.image != blank %}
                    <img 
                        src="{{ article.image | img_url: '370x236' }}" 
                        alt="{{ article.image.alt | default: shop.name }}" />
                {% else %}
                    <img src="{{ "370-236.jpg" | asset_url  }}" alt="">        
                {% endif %}
            </a>
        </div>
        <div class="blog-info">
            <h3><a href="{{ article.url }}">{{ article.title }}</a></h3>
            <div class="blog-meta">
                <ul>
                    <li>{{ article.published_at | date: "%B %d" }}</li>
                    <li>{{ article.author }}</li>
                    <li>{{ article.comments_count | pluralize: 'comment', 'comments' }}</li>
                </ul>
            </div>
            <p>{{ article.excerpt }}</p>
        </div>
    </div>
</div>