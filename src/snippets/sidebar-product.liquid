    <div class="single-top-rated">
        <div class="top-rated-img">
            <a href="#"><img src="{{ product.featured_image | img_url: '91x88' }}" alt=""></a>
        </div>
        <div class="top-rated-text">
            <h4><a href="#">{{ product.title | truncatewords: 7 }}</a></h4>
