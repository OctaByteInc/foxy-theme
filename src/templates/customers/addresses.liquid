<div class="text-center mt-5">
    <h2>My Account</h2> 
    {{ 'customer.log_out' | t | customer_logout_link }}
    <div class="divider" style="border: 1px solid #eee; width:10%; margin:auto; margin-top:10px"></div>
</div>

{% paginate customer.addresses by 5 %}

<div class="container ptb-50">
    <div class="row">
        <div class="col-sm-4"></div>
        <div class="col-sm-8">
            <h3 id="address-heading" data-address-heading-element>YOUR ADDRESSES</h3>
        </div>
    </div>
    <div class="row" data-address>
        <div class="col-sm-4">
            <button 
                class="btn btn-dark"
                data-s-add-new-address >ADD NEW ADDRESS</button>
        </div>

        <div class="col-sm-8 mt-5" style="display: none" id="add-new-address" data-address-form>
            <div class="login">
                <div class="login-form-container">
                    <div class="login-form">
                        {% form 'customer_address', customer.new_address %}
                        <div data-address-fields class="address-form">
                            <div>
                                <input placeholder="First Name" type="text" name="address[first_name]" id="AddressFirstNameNew"
                                    value="{{ form.first_name }}" autocapitalize="words">
                            </div>
                            <div>
                                <input placeholder="Last Name" type="text" name="address[last_name]" id="AddressLastNameNew"
                                    value="{{ form.last_name }}" autocapitalize="words">
                            </div>
                            <div>
                                <input placeholder="Company" type="text" name="address[company]" id="AddressCompanyNew"
                                    value="{{ form.company }}" autocapitalize="words">
                            </div>
                            <div>
                                <input placeholder="Address1" type="text" name="address[address1]" id="AddressAddress1New"
                                    value="{{ form.address1 }}" autocapitalize="words">
                            </div>
                            <div>
                                <input type="text" placeholder="Address2" name="address[address2]" id="AddressAddress2New"
                                    value="{{ form.address2 }}" autocapitalize="words">
                            </div>
                            <div>
                                <input type="text" placeholder="City" name="address[city]" id="AddressCityNew"
                                    value="{{ form.city }}" autocapitalize="words">
                            </div>
                            <div>
                                <label for="AddressCountryNew">Country</label>
                                <select name="address[country]" id="AddressCountryNew" data-default="{{ form.country }}">
                                </select>
                                <br><br>
                            </div>
                            <div>
                                <label for="AddressProvinceNew">Provice</label>
                                <select name="address[province]" id="AddressProvinceNew" data-default="{{ form.province }}">
                                </select>
                                <br>
                                <br>
                            </div>
                            <div>
                                <input type="text" placeholder="Postal/Zip Code" name="address[zip]" id="AddressZipNew"
                                    value="{{ form.zip }}" autocapitalize="characters">
                            </div>
                            <div>
                                <input type="tel" placeholder="Phone" name="address[phone]" id="AddressPhoneNew"
                                    value="{{ form.phone }}" pattern="[0-9\-]*">
                            </div>
                        </div>
                        <div class="button-box">
                            <div class="login-toggle-btn">
                                {{ form.set_as_default_checkbox }}
                                <label>Set as default address</label>
                            </div>
                            <button type="submit" class="default-btn floatright">Submit</button>
                            <button data-s-cancel-new-address class="default-btn floatright ml-3">Cancel</button>
                        </div>
                        {% endform %}
                    </div>
                </div>
            </div>
        </div>

        
        <div class="col-sm-8">
            <div class="row">
                {% for address in customer.addresses %}
                  <div data-address style="width:100%">
                    <div class="col-sm-12" data-s-customer-address>
                        {% if address == customer.default_address %}
                            <strong>Defaul Address</strong> <br>
                        {% endif %}
                        {{ address | format_address }}
                        <br><br>
                        <button 
                            class="btn btn-dark"
                            data-address-id="{{ address.id }}" 
                            data-s-edit-address>Edit</button>
                        <form 
                            style="width: 90%"
                            class="float-right"
                            data-address-delete-form 
                            method="post" 
                            action="/account/addresses/{{ address.id }}"
                            data-confirm-message="Are you sure you wish to delete this address?">
                            <input type="hidden" name="_method" value="delete" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </div>
                    <div 
                        class="col-sm-12 mt-5" 
                        style="display: none" 
                        id="edit-address-{{ address.id }}" data-address-form>
                        <div class="login">
                            <div class="login-form-container">
                                <div class="login-form">
                                    {% form 'customer_address', address %}
                                    <div data-address-fields class="address-form">
                                        <div>
                                            <input placeholder="First Name" type="text" name="address[first_name]" id="AddressFirstNameNew"
                                                value="{{ form.first_name }}" autocapitalize="words">
                                        </div>
                                        <div>
                                            <input placeholder="Last Name" type="text" name="address[last_name]" id="AddressLastNameNew"
                                                value="{{ form.last_name }}" autocapitalize="words">
                                        </div>
                                        <div>
                                            <input placeholder="Company" type="text" name="address[company]" id="AddressCompanyNew"
                                                value="{{ form.company }}" autocapitalize="words">
                                        </div>
                                        <div>
                                            <input placeholder="Address1" type="text" name="address[address1]" id="AddressAddress1New"
                                                value="{{ form.address1 }}" autocapitalize="words">
                                        </div>
                                        <div>
                                            <input type="text" placeholder="Address2" name="address[address2]" id="AddressAddress2New"
                                                value="{{ form.address2 }}" autocapitalize="words">
                                        </div>
                                        <div>
                                            <input type="text" placeholder="City" name="address[city]" id="AddressCityNew" value="{{ form.city }}"
                                                autocapitalize="words">
                                        </div>
                                        <div>
                                            <label for="AddressCountryNew{{ form.id }}">Country</label>
                                            <select name="address[country]" id="AddressCountryNew{{ form.id }}" data-default="{{ form.country }}">
                                            </select>
                                            <br><br>
                                        </div>
                                        <div>
                                            <label for="AddressProvinceNew{{ form.id }}">Province</label>
                                            <select name="address[province]" id="AddressProvinceNew{{ form.id }}" data-default="{{ form.province }}">
                                            </select>
                                            <br>
                                            <br>
                                        </div>
                                        <div>
                                            <input type="text" placeholder="Postal/Zip Code" name="address[zip]" id="AddressZipNew"
                                                value="{{ form.zip }}" autocapitalize="characters">
                                        </div>
                                        <div>
                                            <input type="tel" placeholder="Phone" name="address[phone]" id="AddressPhoneNew" value="{{ form.phone }}"
                                                pattern="[0-9\-]*">
                                        </div>
                                    </div>
                                    <div class="button-box">
                                        <div class="login-toggle-btn">
                                            {{ form.set_as_default_checkbox }}
                                            <label>Set as default address</label>
                                        </div>
                                        <button type="submit" class="default-btn floatright">Submit</button>
                                        <button
                                            data-address-id="{{ address.id }}" 
                                            data-s-cancel-address 
                                            class="default-btn floatright ml-3">Cancel</button>
                                    </div>
                                    {% endform %}
                                </div>
                            </div>
                        </div>
                    </div>
                    <hr>
                  </div>    
                {% endfor %}
            </div>
        </div>
    

    </div>
</div>

{% if paginate.pages > 1 %}
    {% include 'pagination' %}
{% endif %}

{% endpaginate %}
