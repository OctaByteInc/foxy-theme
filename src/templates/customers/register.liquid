{% section 'hero-breadcrumb' %}

<div class="register-area ptb-100">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12 col-12 col-lg-6 col-xl-6 ml-auto mr-auto">
                <div class="login">
                    <div class="login-form-container">
                        <div class="login-form">
                            {% form 'create_customer' %}
                                {{ form.errors | default_errors }}
                                <input
                                    autofocus 
                                    type="text" 
                                    id="FirstName"
                                    name="customer[first_name]" 
                                    placeholder="{{ 'address.first_name' | t }}"
                                    {% if form.first_name %}value="{{ form.first_name }}"{% endif %}>
                                <input
                                    type="text" 
                                    id="LastName"
                                    name="customer[last_name]" 
                                    placeholder="{{ 'address.last_name' | t }}"
                                    {% if form.last_name %}value="{{ form.last_name }}"{% endif %}>    
                                <input 
                                    type="email"
                                    name="customer[email]"
                                    id="Email"
                                    class="{% if form.errors contains 'email' %}form-invalid{% endif %}" 
                                    placeholder="{{ 'address.email' | t }}"
                                    value="{% if form.email %}{{ form.email }}{% endif %}"
                                    spellcheck="false"
                                    autocomplete="off"
                                    autocapitalize="off">
                                <input type="password"
                                    name="customer[password]"
                                    id="CreatePassword"
                                    class="{% if form.errors contains 'password' %}form-invalid{% endif %}"
                                    placeholder="Password">
                                
                                <div class="button-box">
                                    <button type="submit" class="default-btn floatright">
                                        {{ 'customer.register' | t }}
                                    </button>
                                </div>
                            {% endform %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>