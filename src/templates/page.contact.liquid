{% section 'hero-breadcrumb' %}

<div class="contact-area ptb-100">
    <div class="container">
        <div class="contact-info">
            <h2 class="contact-title">contact info</h2>
            <div class="row">
                <div class="col-sm-2"></div>

                <div class="col-sm-8">
                    {% form 'contact' %}
                
                    {% if form.posted_successfully? %}
                    <p class="form-success">
                        {{ 'contact.form.post_success' | t }}
                    </p>
                    {% endif %}
                
                    {{ form.errors | default_errors }}
                
                    <label for="ContactFormName">{{ 'contact.form.name' | t }}</label>
                    <input type="text" class="form-control" name="contact[name]" id="ContactFormName" placeholder="{{ 'contact.form.name' | t }}"
                        value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}">
                
                    <label for="ContactFormEmail">{{ 'contact.form.email' | t }}</label>
                    <input class="form-control" type="email" name="contact[email]" id="ContactFormEmail" placeholder="{{ 'contact.form.email' | t }}"
                        value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
                        spellcheck="false" autocomplete="off" autocapitalize="off">
                
                    <label for="ContactFormPhone">{{ 'contact.form.phone' | t }}</label>
                    <input type="tel" class="form-control" name="contact[phone]" id="ContactFormPhone" placeholder="{{ 'contact.form.phone' | t }}"
                        value="{% if form[phone] %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
                        pattern="[0-9\-]*">
                
                    <label for="ContactFormMessage">{{ 'contact.form.message' | t }}</label>
                    <textarea class="form-control" rows="10" name="contact[body]" id="ContactFormMessage" placeholder="{{ 'contact.form.message' | t }}">
                    {%- if form.body -%}
                      {{- form.body -}}
                    {%- endif -%}
                  </textarea>
                
                    <input type="submit" class="btn btn-primary" value="{{ 'contact.form.send' | t }}">
                
                    {% endform %}
                
                </div>
                
                <div class="col-sm-2"></div>
            </div>
        </div>
        
    </div>
</div>