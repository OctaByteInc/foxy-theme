{%- capture templateName -%}
    {%- case template.name -%}
        {%- when 'collection' -%}
            {{ 'breadcrumb.collection' | t }}
            {%- assign name = collection.title -%}
        {%- when 'blog' -%}
            {{ 'breadcrumb.blog_page' | t }}
            {%- assign name = blog.name -%}
        {%- when 'collections' -%}
            {{ 'breadcrumb.collections' | t }}
            {%- assign name = 'breadcrumb.all' | t -%}    
        {%- when 'cart' -%}
            {{ 'breadcrumb.cart' | t }}
            {%- assign name = 'breadcrumb.cart' | t -%}
        {%- when 'register' -%}
            {{ 'breadcrumb.account' | t }}
            {%- assign name = 'breadcrumb.register' | t -%}
        {%- when 'login' -%}
            {{ 'breadcrumb.account' | t }}
            {%- assign name = 'breadcrumb.login' | t -%}
        {%- when 'article' -%}
            {{ 'breadcrumb.article' | t }}
            {%- assign name = article.title | truncatewords: 5 -%}                
        {%- else -%}
            {{ shop.name }}
            {%- assign name = nil -%}
    {%- endcase -%}
{%- endcapture -%}
{% if section.settings.hero_image != blank %}
    {%- assign imageURL = section.settings.hero_image | img_url: '1920x500' -%}
    {%- capture bgImage -%}
        background-image: url('{{ imageURL }}')
    {%- endcapture -%}
{% else %}
    {%- capture bgImage -%}
        background-image: linear-gradient(141deg, #f1f1f1 0%, #cccccc 51%, #cccccc 75%);
    {%- endcapture -%}   
{% endif %}

<div 
    class="breadcrumb-area pt-205 pb-210 bg-img" 
    style="{{ bgImage }}">
    <div class="container">
        <div class="breadcrumb-content">
            <h2>{{ templateName }}</h2>
            <ul>
                <li><a href="{{ shop.url }}">home</a></li>
                <li> {{ name }} </li>
            </ul>
        </div>
    </div>
</div>

{% schema %}
{
    "name": "Hero Breadcrumb",
    "settings": [
        {
            "type": "image_picker",
            "id": "hero_image",
            "label": "Pick image (Recommend size 1920x500)"
        },
        {
            "type": "color",
            "id": "color1",
            "label": "First Color",
            "default": "#f1f1f1"
        },
        {
            "type": "color",
            "id": "color2",
            "label": "Second Color",
            "default": "#cccccc"
        },
        {
            "type": "color",
            "id": "color3",
            "label": "Third Color",
            "default": "#cccccc"
        }
    ],
    "presets": [
        {
            "category": "Advanced layout",
            "name":"Hero Breadcrumb"
        }
    ]
}
{% endschema %}