<section 
    class="top-stories" 
    data-section-id="{{ section.id }}"
    data-section-type="top-stories" >

<footer class="footer-area gray-bg pt-100 pb-95">
    <div class="container">
        <div class="row">
            {% if section.settings.social_icon == tue %}
                <div class="col-lg-3 col-md-5 col-12">
                    <div class="footer-widget">
                        <div class="footer-widget-l-content">
                            <h4>Follow us on:</h4>
                            <ul>
                                {% if settings.social_twitter_link != blank %}
                                   <li>
                                       <a href="{{ settings.social_twitter_link }}">
                                           <i class="ion-social-twitter"></i>
                                       </a>
                                   </li>
                                {% endif %}
                                {% if settings.social_tumblr_link != blank %}
                                   <li>
                                       <a href="{{ settings.social_tumblr_link }}">
                                           <i class="ion-social-tumblr"></i>
                                       </a>
                                   </li>
                                {% endif %}
                                {% if settings.social_facebook_link != blank %}
                                   <li>
                                       <a href="{{ settings.social_facebook_link }}">
                                           <i class="ion-social-facebook"></i>
                                       </a>
                                   </li>
                                {% endif %}
                                {% if settings.social_instagram_link != blank %}
                                   <li>
                                       <a href="{{ settings.social_instagram_link }}">
                                           <i class="ion-social-instagram-outline"></i>
                                       </a>
                                   </li>
                                {% endif %} 
                            </ul>
                        </div>
                    </div>
                </div>
            {% endif %}
            <div class="col-lg-6 col-md-7 col-12">
                <div class="footer-widget">
                    <div class="footer-widget-m-content text-center">
                        <div class="footer-logo">
                            <a href="#">
                                <img 
                                    src="{{ section.settings.logo | img_url: '116x31' }}" 
                                    alt="{{ section.settings.logo.alt | default: shop.name }}">
                            </a>
                        </div>
                        <div class="footer-nav">
                            {% assign footer_linklist = section.settings.footer_linklist %}
                            {% if linklists[footer_linklist].links.size > 0 %}
                                <nav>
                                    <ul>
                                        {% for link in linklist[footer_linklist].links %}
                                            <li><a href="{{ link.url }}">{{ link.title }}</a></li>
                                        {% endfor %}
                                    </ul>
                                </nav>
                            {% endif %}
                        </div>
                        <p>{{ section.settings.copyright }}</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-12 col-12">
                <div class="footer-widget f-right">
                    <div class="footer-widget-r-content">
                        <ul>
                            <li><span>Phone :</span> {{ section.settings.phone }}</li>
                            <li><span>Email : </span> {{ section.settings.email }}</a></li>
                            <li><span>Address :</span> {{ section.settings.address }}</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</footer>
