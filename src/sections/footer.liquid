{% schema %}
  {
    "name": "Footer",
    "settings": [
      {
          "type": "link_list",
          "id": "footer_linklist",
          "label": "Footer Menu",
          "default": "footer"
      },
      {
          "type": "image_picker",
          "id": "logo",
          "label": "Footer logo"
      },
      {
          "type": "checkbox",
          "id": "social_icons",
          "label": "Show social icons",
          "default": true,
      },
      {
          "type": "text",
          "id": "copyright",
          "label": "Copy right text"
      },
      {
          "type": "header",
          "content": "Contact Info"
      },
      {
          "type": "text",
          "id": "phone",
          "label": "Phone number"
      },
      {
          "type": "text",
          "id": "email",
          "label": "Email address"
      },
      {
          "type": "text",
          "id": "address",
          "label": "Shop address"
      }
    ]
  }

{% endschema %}