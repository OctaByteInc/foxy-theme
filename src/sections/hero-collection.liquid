{%- comment -%}
  Hero Collection section for Home Page
{%- endcomment -%}

<section class="hero-collection" data-section-id="{{ section.id }}" data-section-type="hero-collection">
<div class="slider-area">
    <div class="slider-active owl-carousel">
        <div class="single-slider single-slider-hm1 bg-img ptb-260"
            {% if section.settings.collection_image != blank %}
                style="background-image: url('{{ section.settings.collection_image | img_url: "1920x785" }}')"
            {% else %}
                style="background-image: url('{{ "1920-785.jpg" | asset_url }}')"        
            {% endif %}
            >
            <div class="container">
                <div class="slider-content slider-content-style-1 slider-animated-1">
                    {% assign collection_append = section.settings.collection_name | split: ' ' | last %}
                    {% assign collection_name = section.settings.collection_name | remove: collection_append %}
                    <h3 class="animated">{{ collection_name }} <span>{{ collection_append }}.</span></h3>
                    <h2 class="animated">{{ section.settings.collection_heading }}</h2>
                    <p class="animated"> {{ section.settings.collection_desc }} </p>
                    {% assign collection = collections[section.settings.collection] %}   
                    <a class="btn-hover slider-btn-style animated" href="{{ collection.url }}">shop now</a>
                </div>
            </div>
        </div>
    </div>
</div>
</section>


{% schema %}
  {
    "name": "Hero Collection",
    "settings": [
      {
          "type": "header",
          "content": "Collection Image"
      },
      {
          "type": "image_picker",
          "id": "collection_image",
          "label": "Pick image for banner *Recommend size 1920x785*"
      },
      {
          "type": "collection",
          "id": "collection",
          "label": "Select a collection"
      },
      {
          "type": "text",
          "id": "collection_name",
          "label": "Collection name"
      },
      {
          "type": "text",
          "id": "collection_heading",
          "label": "Collection Heading"
      },
      {
          "type": "richtext",
          "id": "collection_desc",
          "label": "Collection description"
      }
    ],
    "presets": [{
        "name": "Hero Collection",
        "category": "Collection"
    }]
  }
{% endschema %}